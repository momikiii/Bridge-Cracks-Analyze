<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:jaywei="http://schemas.android.com/apk/res-auto"
    xmlns:kongqw="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-16dp" />


    <ImageView
        android:id="@+id/cameraDisplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        kongqw:layout_constraintBottom_toBottomOf="parent"
        kongqw:layout_constraintEnd_toEndOf="parent"
        kongqw:layout_constraintHorizontal_bias="1.0"
        kongqw:layout_constraintStart_toStartOf="parent"
        kongqw:layout_constraintTop_toTopOf="parent"
        kongqw:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginLeft="248dp"
        android:layout_marginTop="300dp"
        android:text="X:"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toTopOf="@+id/bottomSeekBar"
        jaywei:layout_constraintStart_toStartOf="@+id/settings"
        jaywei:layout_constraintTop_toTopOf="parent"
        jaywei:layout_constraintVertical_bias="0.54" />

    <TextView
        android:id="@+id/X_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="0.0"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toBottomOf="@+id/X"
        jaywei:layout_constraintStart_toEndOf="@+id/X" />


    <TextView
        android:id="@+id/Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="292dp"
        android:text="Y:"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toTopOf="@+id/bottomSeekBar"
        jaywei:layout_constraintStart_toEndOf="@+id/X_value"
        jaywei:layout_constraintTop_toTopOf="parent"
        jaywei:layout_constraintVertical_bias="0.644" />

    <TextView
        android:id="@+id/Y_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="0.0"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toBottomOf="@+id/Y"
        jaywei:layout_constraintStart_toEndOf="@+id/Y" />


    <TextView
        android:id="@+id/Z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="300dp"
        android:text="Z:"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toTopOf="@+id/bottomSeekBar"
        jaywei:layout_constraintStart_toEndOf="@+id/Y_value"
        jaywei:layout_constraintTop_toTopOf="parent"
        jaywei:layout_constraintVertical_bias="0.54" />

    <TextView
        android:id="@+id/Z_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="0.0"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintBottom_toBottomOf="@+id/Z"
        jaywei:layout_constraintStart_toEndOf="@+id/Z" />

    <TextView
        android:id="@+id/J"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="650dp"
        android:layout_marginTop="55dp"
        android:text="J :"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/J_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="55dp"
        android:text="0.0"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintStart_toEndOf="@+id/J"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/R"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="650dp"
        android:layout_marginTop="75dp"
        android:text="R :"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/R_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="75dp"
        android:text="0.0"
        android:textColor="#FFF"
        android:textSize="15sp"
        jaywei:layout_constraintStart_toEndOf="@+id/R"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@mipmap/settings"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent"></Button>

    <Button
        android:id="@+id/changeMode"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="576dp"
        android:layout_marginTop="16dp"
        android:background="@mipmap/mode2"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/photograph"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="720dp"
        android:layout_marginTop="305dp"
        android:background="@mipmap/camera"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/album"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="307dp"
        android:background="@mipmap/album"
        jaywei:layout_constraintStart_toStartOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <com.xuexiang.xui.widget.button.SwitchIconView
        android:id="@+id/tcpConnect"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="308dp"
        android:padding="8dp"
        app:siv_disabled_alpha=".5"
        app:siv_disabled_color="#dadada"
        app:siv_enabled="true"
        app:siv_tint_color="#33dec1"
        app:siv_no_dash="true"
        app:srcCompat="@mipmap/tcp_connect"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/settings" />

    <com.xuexiang.xui.widget.button.SwitchIconView
        android:id="@+id/udpconnect"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="308dp"
        android:padding="8dp"
        app:siv_disabled_alpha=".5"
        app:siv_disabled_color="#dadada"
        app:siv_enabled="true"
        app:siv_tint_color="#33dec1"
        app:siv_no_dash="true"
        app:srcCompat="@mipmap/udpconnect"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/tcpConnect" />

    <ImageView
        android:id="@+id/speed_icon"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="316dp"
        android:src="@mipmap/dashboard"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintEnd_toStartOf="@+id/speed" />

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="338dp"
        android:text="12.4"
        android:textColor="#FFF"
        android:textSize="16sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/udpconnect" />

    <TextView
        android:id="@+id/speed_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="339dp"
        android:text="m/s"
        android:textColor="#808080"
        android:textSize="13sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/speed" />

    <ImageView
    android:id="@+id/horizontal_distance_icon"
    android:layout_width="13dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:layout_marginBottom="304dp"
    android:src="@drawable/horizontal_distance"
    jaywei:layout_constraintBottom_toBottomOf="parent"
    jaywei:layout_constraintStart_toEndOf="@+id/speed_unit" />

    <TextView
        android:id="@+id/horizontal_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="336dp"
        android:text="380"
        android:textColor="#FFF"
        android:textSize="16sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/vertical_distance_icon" />

    <TextView
        android:id="@+id/horizontal_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="338dp"
        android:text="m"
        android:textColor="#808080"
        android:textSize="13sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/horizontal_distance" />

    <ImageView
        android:id="@+id/vertical_distance_icon"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="292dp"
        android:src="@drawable/vertical_distance"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/vertical_distance_unit" />

    <TextView
        android:id="@+id/vertical_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="338dp"
        android:text="380"
        android:textColor="#FFF"
        android:textSize="16sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/horizontal_distance_icon" />

    <TextView
        android:id="@+id/vertical_distance_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="338dp"
        android:text="m"
        android:textColor="#808080"
        android:textSize="13sp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintStart_toEndOf="@+id/vertical_distance" />

    <SeekBar
        android:id="@+id/bottomSeekBar"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_marginBottom="16dp"
        android:max="100"
        android:maxHeight="7dp"
        android:progress="50"
        android:progressDrawable="@drawable/seek_bar_bg"
        android:thumb="@drawable/seek_bar_thumb"
        kongqw:layout_constraintBottom_toBottomOf="parent"
        kongqw:layout_constraintEnd_toEndOf="parent"
        kongqw:layout_constraintHorizontal_bias="0.498"
        kongqw:layout_constraintStart_toStartOf="parent" />




    <SeekBar
        android:id="@+id/miniSeekBar"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:max="100"
        android:maxHeight="7dp"
        android:progress="50"
        android:progressDrawable="@drawable/seek_bar_bg"
        android:thumb="@drawable/seek_bar_thumb"
        jaywei:layout_constraintEnd_toEndOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent" />

    <com.tcu.cellphoncontrol.view.VerticalSeekBar
        android:id="@+id/leftSeekBar"
        android:layout_width="55dp"
        android:layout_height="200dp"
        kongqw:layout_constraintBottom_toBottomOf="parent"
        kongqw:layout_constraintStart_toStartOf="parent"
        kongqw:layout_constraintTop_toTopOf="parent"
        kongqw:layout_constraintVertical_bias="0.495"
        tools:ignore="MissingConstraints" />

    <com.tcu.cellphoncontrol.view.VerticalSeekBar
        android:id="@+id/rightSeekBar"
        android:layout_width="55dp"
        android:layout_height="200dp"
        jaywei:layout_constraintBottom_toBottomOf="parent"
        jaywei:layout_constraintEnd_toEndOf="parent"
        jaywei:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.kongqw.rockerlibrary.view.RockerView
        android:id="@+id/rockerViewLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="208dp"
        kongqw:areaBackground="@drawable/default_area_bg"
        kongqw:layout_constraintStart_toStartOf="parent"
        kongqw:layout_constraintTop_toTopOf="parent"
        kongqw:rockerBackground="@drawable/default_rocker_bg"
        kongqw:rockerRadius="30dp" />

    <com.kongqw.rockerlibrary.view.RockerView
        android:id="@+id/rockerViewRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        kongqw:areaBackground="@drawable/default_area_bg"
        kongqw:layout_constraintEnd_toEndOf="parent"
        kongqw:layout_constraintTop_toTopOf="parent"
        kongqw:rockerBackground="@drawable/default_rocker_bg"
        kongqw:rockerRadius="30dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        jaywei:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        jaywei:layout_constraintGuide_percent="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>